<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragments.VerifyAccountsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#eeeeee"
        app:title="User Verification Requests"
        app:titleTextColor="#3A3A3A" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:text="Manager Pending Verification"
                android:textSize="20sp"></TextView>

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_expand_more_black_24dp"></ImageView>
        </LinearLayout>

        <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            app:ael_duration="1000"
            app:ael_interpolator="anticipateOvershoot">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/manager_pending_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </com.github.aakira.expandablelayout.ExpandableWeightLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:text="Mechanic Pending Verification"
                android:textSize="20sp"></TextView>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_expand_more_black_24dp"></ImageView>
        </LinearLayout>
        <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/expandableLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            app:ael_duration="1000"
            app:ael_interpolator="anticipateOvershoot">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mechanic_pending_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp" />

        </com.github.aakira.expandablelayout.ExpandableWeightLayout>

        <LinearLayout
            android:id="@+id/EmptyList3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:contentDescription="All issues resolved"
                android:gravity="center"
                android:src="@drawable/emptyrafiki" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/imprima"
                android:gravity="center"
                android:text="You don't have any requests"
                android:textColor="#333"
                android:textSize="18sp"

                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

    </LinearLayout>
</FrameLayout>