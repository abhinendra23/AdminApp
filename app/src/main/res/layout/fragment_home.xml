<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff"
        >

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="7dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="1.5dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#fff"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:background="@drawable/background_round_white"
        android:layout_marginTop="10dp"
        android:columnOrderPreserved="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:rowCount="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/generate_qr"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/background_circle"
                android:backgroundTint="#4CAF50"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_qr_code"></ImageView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERATE QR"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/imprima"
                android:layout_marginTop="8dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/manage_users"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#9B59B6"
                android:background="@drawable/background_circle"
                android:src="@drawable/ic_add_employee"></ImageView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD EMPLOYEE"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"

               android:fontFamily="@font/imprima"
                android:layout_marginTop="8dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            >

            <ImageView
                android:id="@+id/broadcast"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_row="0"
                android:background="@drawable/background_circle"
                android:padding="15dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_broadcast"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BROADCAST"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/imprima"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                ></TextView>
        </LinearLayout>

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Managers:"
            android:textStyle="bold"
            android:fontFamily="@font/imprima"
            android:textColor="@color/darktext"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manager_list_rv"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mechanic List:"
            android:textStyle="bold"
            android:fontFamily="@font/imprima"
            android:textColor="@color/darktext"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mechanic_list_rv"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
</FrameLayout>