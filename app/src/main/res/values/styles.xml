<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">15dp</item>


    </style>

    <style name="TitleTextAppearance">
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DetailsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/AccentColor</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="My_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@color/bg_chip1</item>
        <!-- Border color -->
        <item name="chipStrokeColor">#f03d5f</item>

        <!-- Chip text color selector -->
        <item name="android:textColor">@color/bg_chiptext1</item>
        <item name="fontFamily">@font/imprima</item>

        <item name="closeIconTint">#000</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>
    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="My_Widget.MaterialComponents.Chip.Choice2" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@color/bg_chip2</item>
        <!-- Border color -->
        <item name="chipStrokeColor">#009688</item>

        <!-- Chip text color selector -->
        <item name="android:textColor">@color/bg_chiptext2</item>

        <item name="closeIconTint">#000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
